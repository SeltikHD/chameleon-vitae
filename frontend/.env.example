# ============================================================================
# Chameleon Vitae - Frontend Environment Variables
# ============================================================================
# Copy this file to .env and fill in the values.
# NEVER commit your .env file to version control.
# ============================================================================

# Backend API Configuration
# The base URL for the Chameleon Vitae API
NUXT_PUBLIC_API_BASE=http://localhost:8080/v1

# NUXT_PUBLIC_SITE_URL should be set to the public URL where your frontend will be hosted.
NUXT_PUBLIC_SITE_URL=https://chameleon-vitae.com

# ============================================================================
# Firebase Configuration (Client-side - Safe to expose)
# ============================================================================
# Get these values from Firebase Console > Project Settings > General
# https://console.firebase.google.com/

# Your Firebase API Key
NUXT_PUBLIC_FIREBASE_API_KEY=

# Firebase Auth Domain (e.g., your-project.firebaseapp.com)
NUXT_PUBLIC_FIREBASE_AUTH_DOMAIN=

# Firebase Project ID
NUXT_PUBLIC_FIREBASE_PROJECT_ID=

# Firebase Storage Bucket (e.g., your-project.appspot.com)
NUXT_PUBLIC_FIREBASE_STORAGE_BUCKET=

# Firebase Messaging Sender ID
NUXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=

# Firebase App ID
NUXT_PUBLIC_FIREBASE_APP_ID=
