# ============================================================================
# Chameleon Vitae - Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your values.
# NEVER commit the .env file to version control!
# ============================================================================

# ============================================================================
# Application
# ============================================================================
APP_ENV=development
APP_PORT=8080
APP_LOG_LEVEL=debug

# ============================================================================
# Database (PostgreSQL)
# ============================================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=chameleon
POSTGRES_PASSWORD=changeme_in_production
POSTGRES_DB=chameleon_vitae

# Full connection string (alternative to individual settings)
# DATABASE_URL=postgres://chameleon:changeme_in_production@localhost:5432/chameleon_vitae?sslmode=disable

# ============================================================================
# AI Provider (Groq API)
# ============================================================================
# Get your API key at: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here

# Model configuration
GROQ_MODEL_GENERATION=llama-3.3-70b-versatile
GROQ_MODEL_ANALYSIS=llama-4-scout-17b-16e-instruct

# ============================================================================
# PDF Engine (Gotenberg)
# ============================================================================
GOTENBERG_URL=http://localhost:3000

# ============================================================================
# Frontend
# ============================================================================
NUXT_PUBLIC_API_BASE=http://localhost:8080/api
