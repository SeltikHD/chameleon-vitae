# ============================================================================
# Chameleon Vitae - Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your values.
# NEVER commit the .env file to version control!
# ============================================================================

# ============================================================================
# Application
# ============================================================================
APP_ENV=development
APP_PORT=8080
APP_LOG_LEVEL=debug

# ============================================================================
# Database (PostgreSQL)
# ============================================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=chameleon
POSTGRES_PASSWORD=changeme_in_production
POSTGRES_DB=chameleon_vitae

# Full connection string (alternative to individual settings)
# DATABASE_URL=postgres://chameleon:changeme_in_production@localhost:5432/chameleon_vitae?sslmode=disable #pragma: allowlist secret

# ============================================================================
# Firebase Authentication
# ============================================================================
# Get your project ID from: https://console.firebase.google.com/
FIREBASE_PROJECT_ID=your_project_id_here

# Path to Firebase service account JSON file (for backend).
# Download from: Firebase Console -> Project Settings -> Service Accounts -> Generate new private key
# IMPORTANT: Never commit this file! Add it to .gitignore
FIREBASE_CREDENTIALS_FILE=firebase-service-account.json

# Alternatively, set the credentials JSON directly (for production/CI environments).
# FIREBASE_CREDENTIALS_JSON={"type":"service_account","project_id":"..."}

# ============================================================================
# AI Provider (Groq API)
# ============================================================================
# Get your API key at: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here

# Model configuration
GROQ_MODEL_GENERATION=llama-3.3-70b-versatile
GROQ_MODEL_ANALYSIS=llama-4-scout-17b-16e-instruct

# ============================================================================
# Reader (Jina API)
# ============================================================================
JINA_API_KEY=your_jina_api_key_here

# ============================================================================
# PDF Engine (Gotenberg)
# ============================================================================
GOTENBERG_URL=http://localhost:3000

# ============================================================================
# Frontend
# ============================================================================
NUXT_PUBLIC_API_BASE=http://localhost:8080/api

# Firebase client-side configuration (for frontend).
# Get these from: Firebase Console -> Project Settings -> General -> Your Apps
NUXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NUXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
NUXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NUXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
NUXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
NUXT_PUBLIC_FIREBASE_APP_ID=your_app_id
