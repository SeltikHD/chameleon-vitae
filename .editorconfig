# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# Go files - tabs are idiomatic
[*.go]
indent_style = tab
indent_size = 4

# YAML files
[*.{yaml,yml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# SQL files
[*.sql]
indent_size = 4

# Frontend files
[frontend/**/*.{ts,js,vue}]
indent_size = 2

# Makefile - tabs are required
[Makefile]
indent_style = tab
